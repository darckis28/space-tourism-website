---
import Logo from "../assets/images/shared/logo.astro";
import IconHamburger from "../assets/images/shared/icon-hamburger.astro";
import IconClose from "../assets/images/shared/icon-close.astro";
---

<section
  class="sm:hidden justify-between fixed w-full items-center flex px-6 pt-6">
  <Logo />
  <button id="open">
    <IconHamburger />
  </button>
</section>
<nav>
  <ul
    id="nav"
    class="bg-white-100 backdrop-blur-sm hidden w-64 flex-col gap-8 pl-8 py-32 sm:hidden h-screen fixed right-0 z-10">
    <button id="close" class="fixed right-6 top-9 z-20">
      <IconClose />
    </button>
    <div
      class="lg:w-[360px] h-[1px] bg-white-default/30 absolute lg:-left-[330px] hidden lg:block">
    </div>
    <li class="flex">
      <a
        href="/"
        class="uppercase hover:border-r-2 hover:border-white-default transition-all w-full">
        <span class="font-bold">00</span> Home</a
      >
    </li>
    <li class="flex">
      <a
        href="/destination"
        class="uppercase hover:border-r-2 hover:border-white-default transition-all w-full">
        <span class="font-bold">01</span> Destination
      </a>
    </li>
    <li class="flex">
      <a
        href="/crew"
        class="uppercase hover:border-r-2 hover:border-white-default transition-all w-full">
        <span class="font-bold">02</span> Crew</a
      >
    </li>
    <li class="flex">
      <a
        href="/technology"
        class="uppercase hover:border-r-2 hover:border-white-default transition-all w-full">
        <span class="font-bold">03</span> Technology</a
      >
    </li>
  </ul>
</nav>
<nav
  class="sm:flex justify-between my-10 fixed w-full items-center pl-5 hidden">
  <Logo />

  <ul
    id="nav"
    class="bg-white-100 backdrop-blur-sm flex gap-12 items-center py-5 sm:pr-5 sm:pl-16 relative">
    <div
      class="lg:w-[360px] h-[1px] bg-white-default/30 absolute lg:-left-[330px] hidden lg:block">
    </div>
    <li>
      <a
        href="/"
        class="uppercase hover:border-b-2 hover:border-white-default transition-all pb-5"
        >00 Home</a
      >
    </li>
    <li>
      <a
        href="/destination"
        class="uppercase hover:border-b-2 hover:border-white-default transition-all pb-5"
        >01 Destination
      </a>
    </li>
    <li>
      <a
        href="/crew"
        class="uppercase hover:border-b-2 hover:border-white-default transition-all pb-5"
        >02 Crew</a
      >
    </li>
    <li>
      <a
        href="/technology"
        class="uppercase hover:border-b-2 hover:border-white-default transition-all pb-5"
        >03 Technology</a
      >
    </li>
  </ul>
</nav>
<script>
  const open = document.getElementById("open");
  const close = document.getElementById("close");
  const nav = document.getElementById("nav");

  open.addEventListener("click", () => nav.classList.replace("hidden", "flex"));
  close.addEventListener("click", () =>
    nav.classList.replace("flex", "hidden")
  );
</script>
